{
  "name": "plantilladocumentacion",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/server.ts",
    "test": "cross-env NODE_OPTIONS=--import=tsx mocha --loader tsx tests/**/*.test.ts",
    "test:coverage": "c8 --reporter=lcov --reporter=text-summary npm test",
    "test:cov": "npm run test:coverage && coveralls < ./coverage/lcov.info",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "lint": "eslint --ext .ts,.js src tests",
    "lint:fix": "eslint --ext .ts,.js src tests --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "c8": {
    "check-coverage": false,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts",
      "**/*.spec.ts",
      "tests/**",
      "coverage/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.7.5",
    "multer": "^1.4.5-lts.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^5.2.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "c8": "^10.1.3",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "mocha": "^10.1.0",
    "prettier": "^3.6.2",
    "ts-migrate": "^0.1.35",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
